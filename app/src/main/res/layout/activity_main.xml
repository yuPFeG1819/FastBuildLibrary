<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="config"
            type="com.yupfeg.sample.ui.MainActivity.BindingConfig"
            />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <FrameLayout
            android:id="@+id/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_title_bar"
            android:orientation="horizontal"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主页"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:gravity="center"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ededed"
                android:layout_gravity="bottom"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.MainActivity"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/btn_main_test_system_camera"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="测试请求权限"
                android:layout_marginTop="10dp"
                onViewClick="@{()->config.testRequestPermission()}"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="测试ResultAPI跳转"
                android:layout_marginTop="10dp"
                onViewClick="@{()->config.testResultApiStartActivity()}"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="测试WindowInset"
                android:layout_marginTop="10dp"
                onViewClick="@{()->config.naviToTestWindowInset()}"
                />
            <Button
                android:id="@+id/btn_main_take_picture"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="跳转系统相机"
                android:layout_marginTop="10dp"
                onViewClick="@{()->config.takeSystemPicture()}"
                />

            <Button
                android:id="@+id/btn_main_pick_content"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="跳转Pick Content"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                onViewClick="@{()->config.pickGallery()}"
                />

            <Button
                android:id="@+id/btn_main_pick_contact"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="选择联系人"
                android:layout_marginTop="10dp"
                onViewClick="@{()->config.pickContact()}"
                />

            <Button
                android:id="@+id/btn_main_get_image_content"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Get Content选择图片"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                onViewClick="@{()->config.selectImageFromGallery()}"
                />


        </LinearLayout>
    </LinearLayout>
</layout>
