<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/holo_orange_dark"
    >

    <ImageView
        android:id="@+id/iv_foot_list_item_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/small_food"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="15dp"
        />

    <TextView
        android:id="@+id/tv_foot_list_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="测试菜品名称"
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/iv_foot_list_item_img"
        app:layout_constraintTop_toTopOf="@id/iv_foot_list_item_img"
        android:layout_marginStart="15dp"
        />

    <TextView
        android:id="@+id/tv_foot_list_item_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="食品描述"
        android:textColor="#999"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tv_foot_list_item_name"
        app:layout_constraintTop_toBottomOf="@id/tv_foot_list_item_name"
        />

    <TextView
        android:id="@+id/tv_foot_list_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="¥ 500"
        android:textSize="14sp"
        android:textColor="#ff4b33"
        app:layout_constraintTop_toBottomOf="@id/tv_foot_list_item_desc"
        app:layout_constraintStart_toStartOf="@id/tv_foot_list_item_name"
        />
</androidx.constraintlayout.widget.ConstraintLayout>