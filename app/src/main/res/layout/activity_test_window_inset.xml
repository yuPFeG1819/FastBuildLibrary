            android:textColor="@android:color/white"
            app:layout_constraintStart_toEndOf="@id/tv_btn_bottom_test_window_inset_1"
            app:layout_constraintEnd_toStartOf="@id/tv_btn_bottom_test_window_inset_3"
            app:layout_constraintBottom_toBottomOf="@id/tv_btn_bottom_test_window_inset_1"
            />

        <androidx.constraintlayout.helper.widget.Layer
            android:id="@+id/layer_test_window_inset_bottom_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_test_window_inset_navigation_group"
            app:layout_constraintBottom_toBottomOf="@id/view_test_window_inset_navigation_group"
            app:constraint_referenced_ids="tv_btn_bottom_test_window_inset_3"
            android:padding="20dp"
            onViewClick="@{()->viewConfig.bottomBtn3()}"
            />

