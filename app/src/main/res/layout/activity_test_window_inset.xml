            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            isFitToNavigation="@{true}"
            isFitExtraPadding="@{true}"
            />

        <androidx.constraintlayout.helper.widget.Layer
            android:id="@+id/layer_test_window_inset_bottom_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_test_window_inset_navigation_group"
            app:layout_constraintBottom_toBottomOf="@id/view_test_window_inset_navigation_group"
            app:constraint_referenced_ids="tv_btn_bottom_test_window_inset_1"
            android:padding="20dp"
            onViewClick="@{()->viewConfig.bottomBtn1()}"
            />

        <TextView
            android:id="@+id/tv_btn_bottom_test_window_inset_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="底部按钮1"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="@id/view_test_window_inset_navigation_group"
            app:layout_constraintEnd_toStartOf="@id/tv_btn_bottom_test_window_inset_2"
            app:layout_constraintTop_toTopOf="@id/view_test_window_inset_navigation_group"
            android:layout_marginTop="15dp"
            />

        <androidx.constraintlayout.helper.widget.Layer
            android:id="@+id/layer_test_window_inset_bottom_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
