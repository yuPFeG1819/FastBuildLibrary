        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_test_window_inset_input"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/include_test_window_inset_title_bar"
            android:background="@drawable/bg_title_bar"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:text="@={viewModel.onTestInputTest}"
            android:hint="测试输入"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintWidth_percent="0.7"
            android:layout_marginTop="15dp"
            setTextWatch="@{viewConfig.textWatcher}"
            setOnFocusChange="@{viewConfig.onForceChange}"
            />

        <Button
            android:id="@+id/tv_btn_test_window_input_enable"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="进入/结束编辑"
            android:textColor="@color/white"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/et_test_window_inset_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintWidth_percent="0.5"
            onViewClick="@{()->viewConfig.updateInputState()}"
            />

