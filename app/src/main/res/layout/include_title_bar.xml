<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewConfig"
            type="com.yupfeg.sample.widget.ITitleConfig"
            />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
        >

        <View
            android:id="@+id/view_title_bar_bg"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_title_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            isFitToStatusBar="@{true}"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title_bar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="标题栏"
            android:text="@{viewConfig.titleName}"
            android:textSize="18sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/view_title_bar_bg"
            app:layout_constraintEnd_toEndOf="@id/view_title_bar_bg"
            app:layout_constraintBottom_toBottomOf="@id/view_title_bar_bg"
            android:layout_marginBottom="15dp"
            />

        <androidx.constraintlayout.helper.widget.Layer
            android:id="@+id/layer_test_window_inset_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_title_bar_bg"
            app:layout_constraintBottom_toBottomOf="@id/view_title_bar_bg"
            app:constraint_referenced_ids="iv_title_bar_back"
            android:padding="15dp"
            onViewClick="@{()->viewConfig.back()}"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_title_bar_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_vector_left_arrow"
            android:tint="@color/white"
            app:layout_constraintStart_toStartOf="@id/view_title_bar_bg"
            app:layout_constraintBottom_toBottomOf="@id/view_title_bar_bg"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="15dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
