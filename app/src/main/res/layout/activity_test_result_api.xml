<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="config"
            type="com.yupfeg.sample.ui.TestResultApiActivity.BindingConfig"
            />
        <variable
            name="viewModel"
            type="com.yupfeg.sample.ui.TestResultViewModel" />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="@={viewModel.testSpannableString}"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            movementMethod="@{viewModel.textClickMovementMethod}"
            highLightColor="@{viewModel.testSpannableHighLightColor}"
            />

        <Button
            android:id="@+id/btn_test_result_api_normal_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正常返回"
            onViewClick="@{()->config.normalBack()}"
            />

        <Button
            android:id="@+id/btn_test_result_api_result_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="set_Result"
            onViewClick="@{()->config.resultDataBack()}"
            />

        <FrameLayout
            android:id="@+id/fragment_webview"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            />
    </LinearLayout>
</layout>
