<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintHeight_max="400dp"
        android:background="@drawable/fast_build_def_permission_rational_dialog"
        >

        <TextView
            android:id="@+id/tv_def_rational_dialog_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="权限请求原因说明"
            android:textSize="16sp"
            android:textColor="@color/fast_build_def_ration_dialog_message_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_permission_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:clipToPadding="false"
            android:overScrollMode="never"
            app:layout_constraintHeight_max="400dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_def_rational_dialog_message"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />

        <View
            android:id="@+id/view_def_rational_dialog_divider_1"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:background="@color/fast_build_def_ration_dialog_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recycler_permission_content"
            />

        <Button
            android:id="@+id/tv_btn_def_rational_dialog_positive"
            android:layout_width="0dp"
            android:layout_height="50dp"
            tools:text="允许"
            android:textAllCaps="false"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/fast_build_def_ration_dialog_btn_text_color"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_def_rational_dialog_divider_1"
            />

        <View
            android:id="@+id/view_def_rational_dialog_divider_2"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/fast_build_def_ration_dialog_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_btn_def_rational_dialog_positive"
            />

        <Button
            android:id="@+id/tv_btn_def_rational_dialog_negative"
            android:layout_width="0dp"
            android:layout_height="50dp"
            tools:text="拒绝"
            android:textAllCaps="false"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/fast_build_def_ration_dialog_btn_text_color"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_def_rational_dialog_divider_2"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
