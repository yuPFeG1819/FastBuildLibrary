<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    横向滑动指示器View的自定义属性-->
    <declare-styleable name="HorizontalSlideView">
        <!-- 滑块指示器颜色 -->
        <attr name="indicatorColor" format="color|reference"/>
        <!-- 滚动条背景颜色-->
        <attr name="sliderBackgroundColor" format="color|reference"/>
    </declare-styleable>

    <!--    圆弧型进度条View的自定义属性-->
    <declare-styleable name="ArcProgressBar">
        <!-- 圆弧的起始角度-->
        <attr name="startAngle" format="float"/>
        <!-- 圆弧扫过的总计角度，360则表示一个完整的圆-->
        <attr name="sweepAngle" format="float"/>
        <!-- 圆弧的背景颜色-->
        <attr name="arcNormalColor" format="color|reference"/>
        <!-- 圆弧的进度条颜色-->
        <attr name="arcProgressColor" format="color|reference"/>
        <!-- 圆弧的宽度，内圆与外圆的间距-->
        <attr name="arcStrokeWidth" format="float"/>
        
        <!-- 最大进度-->
        <attr name="arcMaxProgress" format="integer"/>
        <!-- 当前进度-->
        <attr name="arcProgress" format="float"/>

        <!-- 百分比文本大小-->
        <attr name="arcPercentTextSize" format="dimension"/>
        <!-- 百分比文本颜色-->
        <attr name="arcPercentTextColor" format="color|reference"/>
        <!-- 整数的百分比-->
        <attr name="arcIntPercent" format="boolean"/>
        <!-- 标签文本大小-->
        <attr name="arcLabelTextSize" format="dimension"/>
        <!-- 标签文本颜色-->
        <attr name="arcLabelTextColor" format="color|reference"/>
        <!-- 标签文本内容-->
        <attr name="arcLabelText" format="string"/>

        <!-- 百分比单位文本的字体大小-->
        <attr name="arcPercentUnitTextSize" format="dimension"/>
        <!-- 百分比单位文本的字体颜色-->
        <attr name="arcPercentUnitTextColor" format="color|reference"/>
        <!-- 百分比单位文本的左侧间距，控制与百分比文本的距离，默认为0-->
        <attr name="arcPercentUnitTextPadding" format="dimension"/>
    </declare-styleable>

    <!-- 红点标记视图的自定义属性 -->
    <declare-styleable name="BadgeView">
        <!-- 红点标记数量 -->
        <attr name="badgeNum" format="integer"/>

        <!-- 红点标记的额外间距-->
        <attr name="badgePadding" format="dimension"/>
        <!-- 红点标记的最小圆形半径-->
        <attr name="minRadius" format="dimension"/>
        <!-- 红点标记视图的中心X轴偏移量-->
        <attr name="badgeOffsetX" format="dimension"/>
        <!-- 红点标记视图的中心Y轴偏移量-->
        <attr name="badgeOffsetY" format="dimension"/>

        <!-- 红点标记视图的文本颜色-->
        <attr name="badgeTextColor" format="color|reference"/>
        <!-- 红点标记的文本字体大小-->
        <attr name="badgeTextSize" format="dimension"/>
        <!-- 红点标记视图的背景颜色-->
        <attr name="badgeColor" format="color|reference"/>
        <!-- 红点标记的描边颜色-->
        <attr name="badgeStrokeColor" format="color|reference"/>
        <!--  红点标记的描边宽度  -->
        <attr name="badgeStrokeWidth" format="dimension"/>
        <!--  红点标记图形限制模式的图形颜色-->
        <attr name="badgeGraphColor" format="color|reference"/>
        <!--   红点标记图形限制模式的图形半径-->
        <attr name="badgeGraphRadius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="NineGridLayout">
        <!-- item间距 -->
        <attr name="gridSpace" format="dimension"/>
        <!-- 更多数量文本颜色-->
        <attr name="gridMoreNumTextColor" format="color|reference"/>
        <!--  更多数量文本数量-->
        <attr name="gridMoreNumTextSize" format="dimension"/>
        <!-- 更多遮罩颜色-->
        <attr name="gridMoreMaskColor" format="color|reference"/>
        <!--  item数量超出最大限制后，是否显示遮罩层-->
        <attr name="moreNumMask" format="boolean"/>
    </declare-styleable>
</resources>